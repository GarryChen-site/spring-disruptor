<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">


    <context:component-scan base-package="com.garry"/>

    <bean name="modelProxyFactory" class="com.garry.springlifecycle.domain.proxy.ModelProxyFactory"/>

    <bean name="modelAdvisor" class="com.garry.springlifecycle.domain.advsior.ModelAdvisor"/>

    <bean name="modelProxyInjection" class="com.garry.springlifecycle.domain.model.injection.ModelProxyInjection"/>

<!--    <bean name="disruptorParams" class="com.garry.springlifecycle.async.disruptor.DisruptorParams">-->
<!--        <constructor-arg name="ringBufferSize" value="2048"/>-->
<!--    </bean>-->

    <bean name="disruptorFactory" class="com.garry.springlifecycle.async.disruptor.DisruptorFactory"/>

    <bean name="disruptorPoolFactory" class="com.garry.springlifecycle.async.disruptor.pool.DisruptorPoolFactory"/>

    <bean name="disruptorForCommandFactory" class="com.garry.springlifecycle.async.disruptor.DisruptorForCommandFactory"/>

    <bean name="disruptorCommandPoolFactory" class="com.garry.springlifecycle.async.disruptor.pool.DisruptorCommandPoolFactory"/>

    <bean name="futureDirector" class="com.garry.springlifecycle.async.future.FutureDirector">
        <constructor-arg name="maxconcurrentTaskCount" value="50"/>
    </bean>

    <bean name="eventMessageFire" class="com.garry.springlifecycle.async.EventMessageFire"/>

</beans>
